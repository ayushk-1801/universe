generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Student {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    role     String @default("student")
}

model Professor {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    role     String @default("professor")
    posts    Post[]
}

model Post {
    id          Int       @id @default(autoincrement())
    title       String
    content     String
    professorId Int
    professor   Professor @relation(fields: [professorId], references: [id])
    createdAt   DateTime  @default(now())
}
